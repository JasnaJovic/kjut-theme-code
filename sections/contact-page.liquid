{%- comment -%}
	/sections/contact-page.liquid
{%- endcomment -%}
{%- assign show_page_title = section.settings.show_page_title -%}
{%- capture block_sections -%}
	{%- render 'block-sections' -%}
{%- endcapture -%}

<section data-section-type="contact-page" data-section-id="{{ section.id }}">
	{%- if block_sections != blank -%}
		<div class="page-block-sections">
			{{- block_sections -}}
		</div>
	{%- endif -%}

	{%- if show_page_title or page.content != blank -%}
		<div class="wrapper wrapper--small">
			{%- if show_page_title -%}
				<div class="page-title text-center">
					<h1 class="page-title__heading">{{ page.title }}</h1>
				</div>
			{%- endif -%}

			{%- if page.content != blank -%}
				<div class="contact__content rte">
					{{- page.content -}}
				</div>
			{%- endif -%}
		</div>
	{%- endif -%}
</section>

